div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 Animates projects
    p.lead Collaborative animations from your web browser

.container
  form.thing-form
    label Syncs in realtime across clients
    p.input-group
      input.form-control(type='text', placeholder='Add a new project here.', ng-model='newProject')
      span.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='addProject()') Add New
  .row
    .col-lg-12
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='project in projects')
        li.project
          a(href='#', tooltip='{{project.info}}')
            | {{project.name}}
            span.close.glyphicon.glyphicon-trash(ng-click='deleteProject(project)')
            p.preview
              img(src='assets/images/yeoman.png', alt='{{project.name}}')
            p.description
              {{project.info}}
          p.description
            | Last Modified: {{project.modified | date:'medium'}}

footer.footer
  .container
    p
      | Angular Fullstack v2.0.13
      = ' | '
      a(href='https://twitter.com/tyhenkel') @tyhenkel
      = ' | '
      a(href='https://github.com/DaftMonk/generator-angular-fullstack/issues?state=open') Issues
