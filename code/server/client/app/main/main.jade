div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 Animates projects
    p.lead Collaborative animations from your web browser

.container
  .row
    form.project-form
      .container
        .row
          .col-md-6.col-md-offset-2
            input.form-control(type='text', placeholder='Search your projects here.', ng-model='newProject')
          .col-md-4
            button.btn.btn-primary(type='submit', ng-click='addProject()') Create New
  .row
    .col-lg-12
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat="project in projects | filter:newProject")
        li.project
            span.pull-right.delete.glyphicon.glyphicon-trash(ng-click='deleteProject(project)')
            editable(value='project.name' on-change="titleChange")
            p.preview
              a(href='/projects/{{project._id}}', tooltip='{{project.info}}')
                img(src='assets/images/video.png', alt='{{project.name}}')
            p.modified
                | Last Modified: {{project.modified | date:'medium'}}

footer.footer
  .container
    p
      | Angular Fullstack v2.0.13
      = ' | '
      a(href='https://twitter.com/tyhenkel') @tyhenkel
      = ' | '
      a(href='https://github.com/DaftMonk/generator-angular-fullstack/issues?state=open') Issues
